generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model menu {
    id   Int     @id @default(autoincrement())
    name String? @db.VarChar(255)
}

model item {
    id          Int      @id @default(autoincrement())
    name        String?  @db.VarChar(255)
    price       Decimal? @db.Decimal(10, 2)
    description String?
}
